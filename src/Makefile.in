include @topdir@/src/common.mk

DIRS=	vpr jccl gadget vrj

ifeq (@HAVE_OSG@, Y)
DIRS+=	osgapp
endif

all clean cleandepend clobber debug optim:
	@for d in $(DIRS) ; do			\
            echo "===> $$d" ;			\
            $(MAKE) -C $$d $@ || exit 1;	\
            echo "<=== $$d" ;			\
          done

install:
	$(MKINSTALLDIRS) $(PYTHON_PACKAGES)
	@for d in $(DIRS) ; do			\
            echo "===> $$d" ;			\
            $(MAKE) -C $$d $@ || exit 1;	\
            echo "<=== $$d" ;			\
          done
	cp $(top_srcdir)/dist/__init__.py $(PYTHON_PACKAGES)
	cp $(top_srcdir)/dist/vrj.py $(PYTHON_PACKAGES)

