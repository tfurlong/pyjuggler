bindir=		@bindir@
prefix=		@prefix@
srcdir=		@srcdir@

CXX=		@CXX@
CXXFLAGS=	$(shell vrjuggler-config --cxxflags) @PYTHON_INCLUDES@	\
		-I$(srcdir) $(DEBUG_FLAGS)
DEBUG_FLAGS=	-g -D_DEBUG
LDFLAGS=	-Wl,--export-dynamic
LIBS=		$(shell vrjuggler-config --libs)
EXTRA_LIBS=	$(shell vrjuggler-config --extra-libs)

PYTHON_VERSION=		@PYTHON_VERSION@
PYTHON_LDFLAGS=		@PYTHON_LDFLAGS@ @PYTHON_LIB@ @UTIL_LIB@	\
			@PYTHON_LIB_DEPS@				\
			$(NULL)
BOOST_PYTHON_LDFLAGS=	@BOOST_PYTHON_LDFLAGS@

EXEEXT=		@EXEEXT@
OBJEXT=		@OBJEXT@

SRCS=		main.cpp
OBJS=		$(SRCS:.cpp=.$(OBJEXT))
APP_NAME=	pyAppLoader$(EXEEXT)

vpath %.cpp $(srcdir)

all: $(APP_NAME)

$(APP_NAME): $(OBJS)
	$(CXX) -o $@ $(OBJS) $(LDFLAGS) $(BOOST_PYTHON_LDFLAGS)		\
          $(PYTHON_LDFLAGS) $(LIBS) $(EXTRA_LIBS)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $<

clean:
	rm -f $(OBJS)

clobber:
	$(MAKE) clean
	rm -f $(APP_NAME)
